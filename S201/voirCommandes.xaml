<UserControl
    x:Class="S201.voirCommandes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:S201"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel Orientation="Vertical">
        <!--  1. Titre de la section et sélection de date  -->
        <Grid Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                HorizontalAlignment="Left"
                Content="&lt;&lt; Jour précédent" />

            <TextBlock
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="Bold"
                Text="Lundi 12 juin 2023" />

            <Button
                Grid.Column="2"
                HorizontalAlignment="Right"
                Content="Jour suivant &gt;&gt;" />
        </Grid>

        <!--  2. Zone des statistiques  -->
        <Grid Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Commandes totales  -->
            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="24" />
                <TextBlock HorizontalAlignment="Center" Text="Commandes totales" />
            </StackPanel>

            <!--  En préparation  -->
            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="8" />
                <TextBlock HorizontalAlignment="Center" Text="En préparation" />
            </StackPanel>

            <!--  Prêtes à livrer  -->
            <StackPanel Grid.Column="2" Margin="10">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="5" />
                <TextBlock HorizontalAlignment="Center" Text="Prêtes à livrer" />
            </StackPanel>

            <!--  Chiffre d'affaires  -->
            <StackPanel Grid.Column="3" Margin="10">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="1 248,50 €" />
                <TextBlock HorizontalAlignment="Center" Text="Chiffre d'affaires" />
            </StackPanel>
        </Grid>

        <!--  4. Zone de recherche + tableau  -->
        <StackPanel>
            <!--  Barre de recherche  -->
            <TextBox
                Width="200"
                Margin="0,0,0,10"
                HorizontalAlignment="Right"
                Text="Rechercher un client..." />

            <!--  Tableau des commandes  -->
            <DataGrid
                AutoGenerateColumns="False"
                IsReadOnly="True"
                ItemsSource="{Binding LesCommandes}">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding NumCommande}" Header="N° Commande" />
                    <DataGridTextColumn Binding="{Binding DateCommande}" Header="Heure" />
                    <DataGridTextColumn Binding="{Binding PrixTotal}" Header="Montant" />
                    <DataGridTextColumn Binding="{Binding EstPaye}" Header="Statut" />
                    <DataGridTextColumn Binding="{Binding EstRetire}" Header="" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </StackPanel>
</UserControl>
