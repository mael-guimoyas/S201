<Window x:Class="S201.Windows.Connexion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:S201.Windows"
        mc:Ignorable="d"
        Title="Connexion" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <Border Grid.Row="0" Background="#2196F3">
            <TextBlock Text="CONNEXION" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Foreground="White" 
                      HorizontalAlignment="Center" 
                      VerticalAlignment="Center"/>
        </Border>

        <!-- Corps principal -->
        <StackPanel Grid.Row="1" 
                   Margin="40,0,40,0" 
                   VerticalAlignment="Center" >

            <!-- Champ nom d'utilisateur -->
            <TextBlock Text="Nom d'utilisateur" 
                      FontSize="14" 
                      FontWeight="SemiBold" 
                      
                      Foreground="#333"/>

            <TextBox x:Name="txtUsername" 
                     
                    FontSize="14" 
                    Padding="10,8" 
                    BorderBrush="#ddd" 
                    BorderThickness="1"
                    Margin="0,0,0,20">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Style.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#2196F3"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>

            <!-- Champ mot de passe -->
            <TextBlock Text="Mot de passe" 
                      FontSize="14" 
                      FontWeight="SemiBold" 
                      Margin="0,0,0,5"
                      Foreground="#333"/>

            <PasswordBox x:Name="txtPassword" 
                        Height="35" 
                        FontSize="14" 
                        Padding="10,5" 
                        BorderBrush="#ddd" 
                        BorderThickness="1"
                        Margin="0,0,0,20">
                <PasswordBox.Style>
                    <Style TargetType="PasswordBox">
                        <Style.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#2196F3"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </PasswordBox.Style>
            </PasswordBox>

            <!-- Case à cocher "Se souvenir de moi" -->
            <CheckBox x:Name="chkRememberMe" 
                     Content="Se souvenir de moi" 
                     FontSize="12" 
                     Margin="0,0,0,25"
                     Foreground="#666"/>

            <!-- Bouton de connexion -->
            <Button x:Name="btnLogin" 
                   Content="SE CONNECTER" 
                   Height="45" 
                   FontSize="14" 
                   FontWeight="Bold" 
                   Background="#2196F3" 
                   Foreground="White" 
                   BorderThickness="0"
                   Cursor="Hand"
                   Click="ButSeConnecter_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

        </StackPanel>

        <!-- Pied de page -->

    </Grid>
</Window>
