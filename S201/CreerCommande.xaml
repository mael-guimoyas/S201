<UserControl
    x:Class="S201.CreerCommande"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:S201"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Colonne de gauche (70%) -->
        <StackPanel Grid.Column="0" Margin="0,0,20,0">
            <!-- Bloc Sélection du client -->
            <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Sélection du client" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0" Margin="0,0,5,0" Padding="5" VerticalContentAlignment="Center"/>
                        <Button Grid.Column="1" Content="Rechercher" Background="#0078D7" Foreground="White" Padding="5"/>
                    </Grid>

                    <!-- Cadre client sélectionné -->
                    <Border BorderBrush="#CCCCCC" BorderThickness="1" Background="#F5F5F5" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Nom: Jean Dupont" FontWeight="SemiBold"/>
                            <TextBlock Text="Contact: 06 12 34 56 78" Margin="0,5,0,0"/>
                            <TextBlock Text="Adresse: 12 Rue des Fleurs, 75000 Paris" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Bloc Sélection des plats -->
            <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="4" Padding="10">
                <StackPanel>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Sélection des plats" FontWeight="Bold" FontSize="16"/>
                        <Button Grid.Column="1" Content="+ Ajouter un plat" Background="#4FC3F7" Foreground="White" Padding="5,2"/>
                    </Grid>

                    <!-- Liste horizontale des plats -->
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding Dishes}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="220" Height="120" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="4" Margin="0,0,10,0" Background="White">
                                        <StackPanel Margin="10">
                                            <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Subtitle}" Margin="0,5,0,0" FontSize="12" Foreground="#666666"/>
                                            <TextBlock Text="{Binding Price}" Margin="0,20,0,0" Foreground="#4CAF50" HorizontalAlignment="Right"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Colonne de droite (30%) - Récapitulatif -->
        <Border Grid.Column="1" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="4" Background="#FAFAFA" Padding="15">
            <StackPanel>
                <TextBlock Text="Récapitulatif de commande" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>

                <!-- Liste des articles -->
                <StackPanel Margin="0,0,0,15">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Salade César × 2" Width="120"/>
                        <TextBlock Text="— 17,00 €" HorizontalAlignment="Right"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Poulet rôti × 3" Width="120"/>
                        <TextBlock Text="— 38,70 €" HorizontalAlignment="Right"/>
                    </StackPanel>
                </StackPanel>

                <Separator Margin="0,0,0,15"/>

                <!-- Total -->
                <TextBlock Text="Total : 55,70 €" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Right"/>

                <!-- Boutons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Annuler" Background="#E0E0E0" Padding="15,5" Margin="0,0,10,0"/>
                    <Button Content="Valider" Background="#4CAF50" Foreground="White" Padding="15,5"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
