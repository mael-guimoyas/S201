<UserControl
    x:Class="S201.CreerPlat"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:S201"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label
            Content="Nouveau Plat"
            FontSize="16"
            FontWeight="Bold" />
        <Border Grid.Column="1">
            <Grid Margin="5" Background="#F8F9FA">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="2*" />
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Label Content="Informations de base" />
                    <StackPanel Grid.Row="1">
                        <Label Content="Nom du Plat*" />
                        <TextBox />
                    </StackPanel>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <Label Content="Catégorie*" />
                            <ListBox Height="20" />
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <Label Content="Type*" />
                            <ListBox Height="20" />
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <Label Content="Prix (€)*" />
                            <TextBox />
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <Label Content="Temps de préparation (min)" />
                            <TextBox />
                        </StackPanel>
                    </Grid>
                </Grid>
                <StackPanel Grid.Row="1">
                    <Label Content="Image du plat" />
                    <Rectangle Height="80" Fill="#FFD2D2D2" />
                </StackPanel>
                <Grid Grid.Row="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Label Content="Options supplémentaires" />
                    <StackPanel Grid.Row="1">
                        <Label Content="Disponibilité" />
                        <CheckBox Content="Disponible à la commande" />
                    </StackPanel>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="1" Content="Annuler" />
                        <Button
                            Grid.Column="3"
                            Background="#3A7BD5"
                            Content="Enregistrer le plat" />
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
