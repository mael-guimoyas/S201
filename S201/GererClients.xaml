<UserControl
    x:Class="S201.GererClients"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:S201"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <!--  Section titre et actions  -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Label
                Grid.Column="0"
                VerticalAlignment="Center"
                Content="Gestion des clients"
                FontSize="24"
                FontWeight="Bold" />

            <StackPanel
                Grid.Column="1"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBox
                    x:Name="txtRecherche"
                    Width="250"
                    Height="35"
                    Margin="0,0,10,0"
                    Padding="10,8"
                    VerticalContentAlignment="Center"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    FontSize="14"
                    Foreground="Gray"
                    Text="Rechercher un client..." />
                <Button
                    x:Name="btnRechercher"
                    Height="35"
                    Margin="0,0,10,0"
                    Padding="20,8"
                    Background="#2196F3"
                    BorderThickness="0"
                    Content="Rechercher"
                    FontSize="14"
                    Foreground="White" />
                <Button
                    x:Name="btnAjouter"
                    Height="35"
                    Padding="20,8"
                    Background="#4CAF50"
                    BorderThickness="0"
                    Content="+ Ajouter un client"
                    FontSize="14"
                    Foreground="White" />
            </StackPanel>
        </Grid>

        <!--  DataGrid des clients  -->
        <Border
            Grid.Row="1"
            Margin="0,10,0,0"
            Background="White"
            BorderBrush="#E0E0E0"
            BorderThickness="1">
            <DataGrid
                x:Name="dgClients"
                AlternatingRowBackground="#F8F9FA"
                AutoGenerateColumns="False"
                Background="White"
                BorderThickness="0"
                FontSize="13"
                GridLinesVisibility="Horizontal"
                HeadersVisibility="Column"
                RowHeaderWidth="0">

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F5F5F5" />
                        <Setter Property="Foreground" Value="#333" />
                        <Setter Property="FontWeight" Value="SemiBold" />
                        <Setter Property="Padding" Value="12,8" />
                        <Setter Property="BorderBrush" Value="#E0E0E0" />
                        <Setter Property="BorderThickness" Value="0,0,1,1" />
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Height" Value="45" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E3F2FD" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="12,8" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                    </Style>
                </DataGrid.CellStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="50"
                        Binding="{Binding Id}"
                        Header="ID" />
                    <DataGridTextColumn
                        Width="120"
                        Binding="{Binding Nom}"
                        Header="Nom" />
                    <DataGridTextColumn
                        Width="130"
                        Binding="{Binding Telephone}"
                        Header="Téléphone" />
                    <DataGridTextColumn
                        Width="150"
                        Binding="{Binding Email}"
                        Header="Email" />
                    <DataGridTextColumn
                        Width="80"
                        Binding="{Binding Type}"
                        Header="Type" />


                    <DataGridTemplateColumn Width="100" Header="Statut">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border
                                    Padding="8,4"
                                    HorizontalAlignment="Center"
                                    Background="#D4EDDA"
                                    CornerRadius="12">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="11"
                                        FontWeight="SemiBold"
                                        Foreground="#155724"
                                        Text="Actif" />
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="180" Header="Actions">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                    <Button
                                        Margin="0,0,15,0"
                                        Padding="8,4"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Content="Modifier"
                                        Cursor="Hand"
                                        FontSize="12"
                                        Foreground="#2196F3">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#E3F2FD" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button
                                        Padding="8,4"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Content="Commandes"
                                        Cursor="Hand"
                                        FontSize="12"
                                        Foreground="#2196F3">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#E3F2FD" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>

                <!--  Les données seront liées depuis le code-behind  -->
            </DataGrid>
        </Border>

        <!--  Footer avec compteur  -->
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <TextBlock
                VerticalAlignment="Center"
                FontSize="13"
                Foreground="#666"
                Text="128 clients trouvés" />
        </Grid>
    </Grid>
</UserControl>
