<UserControl
    x:Class="S201.RecherchePlats"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:S201"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ScrollViewer
        x:Name="Conteneur"
        Grid.Row="2"
        Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="6*" />
            </Grid.RowDefinitions>
            <Label
                Margin="20,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="center"
                Content="Recherche de plats"
                FontSize="16"
                FontWeight="Bold" />
            <StackPanel Grid.Row="1">
                <Border>
                    <StackPanel Margin="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <TextBox
                                Grid.Column="0"
                                Margin="0,0,5,0"
                                Padding="5"
                                VerticalContentAlignment="Center" />
                            <Button
                                Grid.Column="1"
                                Padding="5"
                                Background="#0078D7"
                                Content="Rechercher"
                                Foreground="White" Click="Button_Click_1" />
                            <Button
                                Grid.Column="3"
                                Padding="5"
                                Background="#007800"
                                Click="Button_Click"
                                Content="Créer"
                                Foreground="White" />
                        </Grid>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Content="Catégorie" />
                                <Label Grid.Column="2" Content="Sous-Catégorie" />
                                <Label Grid.Column="4" Content="Date de retrait" />
                                <Label Grid.Column="6" Content="Prix" />
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <ListBox
                                    Grid.Column="0"
                                    Margin="0,0,5,0"
                                    Padding="5"
                                    VerticalContentAlignment="Center" />
                                <ListBox
                                    Grid.Column="2"
                                    Margin="0,0,5,0"
                                    Padding="5"
                                    VerticalContentAlignment="Center" />
                                <TextBox
                                    Grid.Column="4"
                                    Margin="0,0,5,0"
                                    Padding="5"
                                    VerticalContentAlignment="Center" />
                                <TextBox
                                    Grid.Column="6"
                                    Margin="0,0,5,0"
                                    Padding="5"
                                    VerticalContentAlignment="Center" />
                            </Grid>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
            <DataGrid 
                Margin="5" 
                Grid.Row="2"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                ItemsSource="{Binding Plat}">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding NumPlat}" Header="N° Plat" />
                    <DataGridTextColumn Binding="{Binding NumSousCatégorie}" Header="N° SousCatégorie" />
                    <DataGridTextColumn Binding="{Binding NumPeriode}" Header="N° Periode" />
                    <DataGridTextColumn Binding="{Binding NomPlat}" Header="Nom Plat" />
                    <DataGridTextColumn Binding="{Binding PrixUnitaire}" Header="Prix Unitaire" />
                    <DataGridTextColumn Binding="{Binding DelaiPreparation}" Header="Temps Préparation" />
                    <DataGridTextColumn Binding="{Binding NbPersonnes}" Header="Nb Personnes requise" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </ScrollViewer>
</UserControl>
