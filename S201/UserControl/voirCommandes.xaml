<UserControl
    x:Class="S201.voirCommandes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:S201"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel Orientation="Vertical">
        <!--  1. Titre de la section et sélection de date  -->
        <Grid Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                x:Name="labelDateJour"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="Bold"
                Text="" />
        </Grid>

        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Margin="10" Content="Recherche par date : " />
                <TextBox
                    x:Name="rechercheJour"
                    Width="132"
                    Margin="10"
                    Text=""
                    TextChanged="rechercheJour_TextChanged" />
                <Label Margin="10" Content="Recherche par numclient : " />
                <TextBox
                    x:Name="rechercheClient"
                    Width="134"
                    Margin="10"
                    RenderTransformOrigin="0.491,0.621"
                    Text=""
                    TextChanged="rechercheClient_TextChanged" />
                <Button
                    x:Name="butCommande"
                    Margin="10"
                    Padding="5"
                    HorizontalAlignment="Right"
                    Background="#FF0082E6"
                    Click="butCommande_Click"
                    Content="Creer une commande"
                    Foreground="White" />
            </StackPanel>

            <DataGrid
                x:Name="dgCommande"
                Margin="15"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                ItemsSource="{Binding LesCommandes}">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F5F5F5" />
                        <Setter Property="Foreground" Value="#333" />
                        <Setter Property="FontWeight" Value="SemiBold" />
                        <Setter Property="Padding" Value="12,8" />
                        <Setter Property="BorderBrush" Value="#E0E0E0" />
                        <Setter Property="BorderThickness" Value="0,0,1,1" />
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E3F2FD" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="12,8" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                    </Style>
                </DataGrid.CellStyle>


                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding NumCommande}"
                        Header="N° Commande" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding DateCommande}"
                        Header="Date/heure" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding PrixTotal, StringFormat={}{0} €}"
                        Header="Montant" />

                    <DataGridTemplateColumn Width="*" Header="Commande payée">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="Non" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding EstPaye}" Value="True">
                                                    <Setter Property="Text" Value="Oui" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="*" Header="Commande retirée">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="Non" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding EstRetire}" Value="True">
                                                    <Setter Property="Text" Value="Oui" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding NumClient}"
                        Header="Numero client" />


                    <DataGridTemplateColumn Width="180" Header="Actions">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                    <Button
                                        Margin="0,0,15,0"
                                        Padding="8,4"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Click="Button_Click"
                                        Content="Modifier"
                                        Cursor="Hand"
                                        FontSize="12"
                                        Foreground="#2196F3">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#E3F2FD" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>

            </DataGrid>

        </StackPanel>
    </StackPanel>
</UserControl>
