<UserControl
    x:Class="S201.voirCommandes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:S201"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel Orientation="Vertical">
        <!--  1. Titre de la section et sélection de date  -->
        <Grid Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                HorizontalAlignment="Left"
                Content="&lt;&lt; Jour précédent" />

            <TextBlock
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="Bold"
                Text="Lundi 12 juin 2023" />

            <Button
                Grid.Column="2"
                HorizontalAlignment="Right"
                Content="Jour suivant &gt;&gt;" />
        </Grid>

        <!--  2. Zone des statistiques  -->
        <Grid Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Commandes totales  -->
            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="24" />
                <TextBlock HorizontalAlignment="Center" Text="Commandes totales" />
            </StackPanel>

            <!--  En préparation  -->
            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="8" />
                <TextBlock HorizontalAlignment="Center" Text="En préparation" />
            </StackPanel>

            <!--  Prêtes à livrer  -->
            <StackPanel Grid.Column="2" Margin="10">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="5" />
                <TextBlock HorizontalAlignment="Center" Text="Prêtes à livrer" />
            </StackPanel>

            <!--  Chiffre d'affaires  -->
            <StackPanel Grid.Column="3" Margin="10">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="1 248,50 €" />
                <TextBlock HorizontalAlignment="Center" Text="Chiffre d'affaires" />
            </StackPanel>
        </Grid>

        <!--  4. Zone de recherche + tableau  -->
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBox
                    x:Name="rechercheJour"
                    Width="134"
                    Text="" Margin="134,0,0,0"/>
                <TextBox
                    x:Name="rechercheClient"
                    Width="134"
                    Text=""
                    TextChanged="rechercheClient_TextChanged" RenderTransformOrigin="0.491,0.621" Margin="398,0,0,0" />
            </StackPanel>


            <!--  Tableau des commandes  -->
            <DataGrid
                x:Name="dgCommande"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                ItemsSource="{Binding LesCommandes}">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F5F5F5" />
                        <Setter Property="Foreground" Value="#333" />
                        <Setter Property="FontWeight" Value="SemiBold" />
                        <Setter Property="Padding" Value="12,8" />
                        <Setter Property="BorderBrush" Value="#E0E0E0" />
                        <Setter Property="BorderThickness" Value="0,0,1,1" />
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding NumCommande}"
                        Header="N° Commande" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding DateCommande}"
                        Header="Date/heure" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding PrixTotal}"
                        Header="Montant" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding EstPaye}"
                        Header="Commande paye" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding EstRetire}"
                        Header="Commande retire" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding NumClient}"
                        Header="Numero client" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </StackPanel>
</UserControl>
