<UserControl
    x:Class="S201.GererClients"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:S201"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    
    <Grid x:Name="grdprincipale" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <!--  Section titre et actions  -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Label
                Grid.Column="0"
                VerticalAlignment="Center"
                Content="Clients"
                FontSize="24"
                FontWeight="Bold" Margin="0,0,27,0" />

            <StackPanel
                Grid.Column="1"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBox
                    x:Name="txtRecherche"
                    TextChanged="txtRecherche_TextChanged"
                    Width="186"
                    Height="42"
                    Margin="0,0,15,0"
                    Padding="10,8"
                    VerticalContentAlignment="Center"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    FontSize="14"
                    Foreground="Gray"
                    Text="" />
                <Button
                    x:Name="btnAfficherTout"
                    Height="35"
                    Margin="0,0,10,0"
                    Padding="20,8"
                    Background="#FF9800"
                    BorderThickness="0"
                    Click="btnAfficherTout_Click"
                    Content="Afficher tout"
                    FontSize="14"
                    Foreground="White" />
                <Button
                    x:Name="btnAjouter"
                    Height="35"
                    Padding="20,8"
                    Background="#4CAF50"
                    BorderThickness="0"
                    Click="btnAjouter_Click"
                    Content="+ Ajouter un client"
                    FontSize="14"
                    Foreground="White" />
            </StackPanel>
        </Grid>

        <!--  DataGrid des clients  -->
        <Border
            Grid.Row="1"
            Margin="0,10,0,0"
            Background="White"
            BorderBrush="#E0E0E0"
            BorderThickness="0,0,1,0">
            <DataGrid
                x:Name="dgClients"
                AlternatingRowBackground="#F8F9FA"
                AutoGenerateColumns="False"
                Background="White"
                BorderThickness="0,0,1,0"
                FontSize="13"
                GridLinesVisibility="Horizontal"
                HeadersVisibility="Column"
                RowHeaderWidth="0"
                SelectionChanged="dgClients_SelectionChanged">

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F5F5F5" />
                        <Setter Property="Foreground" Value="#333" />
                        <Setter Property="FontWeight" Value="SemiBold" />
                        <Setter Property="Padding" Value="12,8" />
                        <Setter Property="BorderBrush" Value="#E0E0E0" />
                        <Setter Property="BorderThickness" Value="0,0,1,0" />
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Height" Value="45" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E3F2FD" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="12,8" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                    </Style>
                </DataGrid.CellStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="50"
                        Binding="{Binding Numclient}"
                        Header="ID" />
                    <DataGridTextColumn
                        Width="120"
                        Binding="{Binding Nomclient}"
                        Header="Nom" />
                    <DataGridTextColumn
                        Width="120"
                        Binding="{Binding Prenomclient}"
                        Header="Prénom" />
                    <DataGridTextColumn
                        Width="130"
                        Binding="{Binding Tel}"
                        Header="Téléphone" />
                    <DataGridTextColumn
                        Width="150"
                        Binding="{Binding Adresserue}"
                        Header="Rue" />
                    <DataGridTextColumn
                        Width="80"
                        Binding="{Binding Adressecp}"
                        Header="Code Postal" />
                    <DataGridTextColumn
                        Width="80"
                        Binding="{Binding Adresseville}"
                        Header="Ville" />



                    <DataGridTemplateColumn Width="100" Header="Statut">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border
                                    Padding="8,4"
                                    HorizontalAlignment="Center"
                                    Background="#D4EDDA"
                                    CornerRadius="12">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="11"
                                        FontWeight="SemiBold"
                                        Foreground="#155724"
                                        Text="Actif" />
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="180" Header="Actions">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                    <Button
                                        Margin="0,0,15,0"
                                        Padding="8,4"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Click="Button_Click"
                                        Content="Modifier"
                                        Cursor="Hand"
                                        FontSize="12"
                                        Foreground="#2196F3">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#E3F2FD" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button
                                        Padding="8,4"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Content="Commandes"
                                        Cursor="Hand"
                                        FontSize="12"
                                        Foreground="#2196F3">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#E3F2FD" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>

                <!--  Les données seront liées depuis le code-behind  -->
            </DataGrid>

        </Border>

        <!--  Footer avec compteur  -->
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <TextBlock
                x:Name="lblCompteur"
                VerticalAlignment="Center"
                FontSize="13"
                Foreground="#666"
                Text="0 clients trouvés" />
        </Grid>
        <TextBlock
            x:Name="txtStatus"
            Grid.Row="2"
            Margin="10"
            FontWeight="Bold"
            Text="Prêt" />

    </Grid>
    
</UserControl>
