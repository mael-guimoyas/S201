<UserControl
    x:Class="S201.RecherchePlats"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:S201"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ScrollViewer x:Name="Conteneur" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="6*" />
            </Grid.RowDefinitions>
            <Label
                Margin="20,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="center"
                Content="Recherche de plats"
                FontSize="16"
                FontWeight="Bold" />
            <StackPanel Grid.Row="1">
                <Border>
                    <StackPanel Margin="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <TextBox
                                x:Name="TxtNom"
                                Grid.Column="0"
                                Margin="0,0,5,0"
                                Padding="5"
                                VerticalContentAlignment="Center"
                                TextChanged="TxtNom_TextChanged" />
                            <Button
                                Grid.Column="1"
                                Grid.ColumnSpan="2"
                                Height="28"
                                Margin="10,0,0,0"
                                Padding="5"
                                VerticalAlignment="Top"
                                Background="#007800"
                                Click="Button_Click"
                                Content="Créer"
                                Foreground="White" />
                        </Grid>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Content="Catégorie" />
                                <Label Grid.Column="2" Content="Sous-Catégorie" />
                                <Label Grid.Column="6" Content="Prix" />
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBox
                                    x:Name="txtBoxCate"
                                    Grid.Column="0"
                                    Margin="0,0,5,0"
                                    Padding="5"
                                    VerticalContentAlignment="Center"
                                    TextChanged="txtBoxCate_TextChanged" />
                                <TextBox
                                    x:Name="txtBoxSousCate"
                                    Grid.Column="2"
                                    Margin="0,0,5,0"
                                    Padding="5"
                                    VerticalContentAlignment="Center"
                                    TextChanged="txtBoxSousCate_TextChanged" />
                                <TextBox
                                    x:Name="txtBoxPrix"
                                    Grid.Column="6"
                                    Margin="0,0,5,0"
                                    Padding="5"
                                    VerticalContentAlignment="Center"
                                    TextChanged="TxtPrix_TextChanged" />
                            </Grid>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
            <DataGrid
                x:Name="dgPlat"
                Grid.Row="2"
                Margin="5"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                ItemsSource="{Binding Plat}"
                SelectionChanged="DataGrid_SelectionChanged">

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F5F5F5" />
                        <Setter Property="Foreground" Value="#333" />
                        <Setter Property="FontWeight" Value="SemiBold" />
                        <Setter Property="Padding" Value="12,8" />
                        <Setter Property="BorderBrush" Value="#E0E0E0" />
                        <Setter Property="BorderThickness" Value="0,0,1,1" />
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding NumPlat}" Header="N° Plat" />
                    <DataGridTextColumn Binding="{Binding NumSousCatégorie}" Header="N° SousCatégorie" />
                    <DataGridTextColumn Binding="{Binding NumPeriode}" Header="N° Periode" />
                    <DataGridTextColumn Binding="{Binding NomPlat}" Header="Nom Plat" />
                    <DataGridTextColumn Binding="{Binding PrixUnitaire}" Header="Prix Unitaire" />
                    <DataGridTextColumn Binding="{Binding DelaiPreparation}" Header="Temps Préparation" />
                    <DataGridTextColumn
                        Width="75"
                        Binding="{Binding NbPersonnes}"
                        Header="Nb Personnes" />
                    <DataGridTemplateColumn Width="180" Header="Actions">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                    <Button
                                        Margin="0,0,15,0"
                                        Padding="8,4"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Click="Button_Click"
                                        Content="Modifier"
                                        Cursor="Hand"
                                        FontSize="12"
                                        Foreground="#2196F3">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#E3F2FD" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </ScrollViewer>
</UserControl>
