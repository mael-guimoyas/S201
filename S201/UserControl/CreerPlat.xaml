<Window
    x:Class="S201.CreerPlat"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:S201"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="350"
    d:DesignWidth="600"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label
            Content="Nouveau Plat"
            FontSize="16"
            FontWeight="Bold" />
        <Border Grid.Column="1">
            <StackPanel x:Name="formPlat">
                <Grid Background="#F8F9FA">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />

                    </Grid.RowDefinitions>
                    <Label Content="Informations de base" />
                    <StackPanel Grid.Row="1">
                        <Label Content="Nom du Plat*" />
                        <TextBox x:Name="TxtBoxNomPlat" Text="{Binding nomplat, ValidatesOnExceptions=True}" />
                    </StackPanel>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <Label Content="N° SousCatégorie*" />
                            <TextBox
                                x:Name="TxtBoxSousCatégorie"
                                Height="20"
                                Text="{Binding numsouscategorie, ValidatesOnExceptions=True}" />
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <Label Content="N° Periode*" />
                            <TextBox
                                x:Name="TxtBoxPeriode"
                                Height="20"
                                Text="{Binding numperiode, ValidatesOnExceptions=True}" />
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <Label Content="Prix (€)*" />
                            <TextBox x:Name="TxtBoxPrix" Text="{Binding prixunitaire, ValidatesOnExceptions=True}" />
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <Label Content="Nb Personne*" />
                            <TextBox x:Name="TxtBoxNbPersonne" Text="{Binding nbpersonnes, ValidatesOnExceptions=True}" />
                        </StackPanel>
                    </Grid>
                    <StackPanel Grid.Row="4">
                        <Label Content="Temp*" />
                        <TextBox x:Name="TxtBoxDelaiPrepa" Text="{Binding Delaipreparation, ValidatesOnExceptions=True}" />
                    </StackPanel>
                    <Label Grid.Row="5" Content="* Champs obligatoire" />
                    <Grid Grid.Row="6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <Button
                            x:Name="ButAnnuler"
                            Grid.Column="1"
                            Height="40"
                            Click="ButAnnuler_Click"
                            Content="Annuler" />
                        <Button
                            x:Name="ButValider"
                            Grid.Column="3"
                            Height="40"
                            Margin="0,18,10,17"
                            Background="#3A7BD5"
                            Click="ButValider_Click"
                            Content="Enregistrer le plat" />
                    </Grid>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>