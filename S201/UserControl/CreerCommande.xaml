<UserControl
    x:Class="S201.CreerCommande"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:S201"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,0,20,0">
            <Border
                Margin="0,0,0,20"
                Padding="10"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                CornerRadius="4">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Sélection du client" />

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>

                        <TextBox
                            Grid.Column="0"
                            Margin="0,0,5,0"
                            Padding="5"
                            VerticalContentAlignment="Center" />
                        <Button
                            Grid.Column="1"
                            Padding="5"
                            Background="#0078D7"
                            Content="Rechercher"
                            Foreground="White" />
                    </Grid>

                    <!--  Cadre client sélectionné  -->
                    <Border
                        Padding="10"
                        Background="#F5F5F5"
                        BorderBrush="#CCCCCC"
                        BorderThickness="1">
                        <StackPanel>
                            <TextBlock FontWeight="SemiBold" Text="Nom: Jean Dupont" />
                            <TextBlock Margin="0,5,0,0" Text="Contact: 06 12 34 56 78" />
                            <TextBlock Margin="0,5,0,0" Text="Adresse: 12 Rue des Fleurs, 75000 Paris" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!--  Bloc Sélection des plats  -->
            <Border
                Padding="10"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                CornerRadius="4">
                <StackPanel>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            FontSize="16"
                            FontWeight="Bold"
                            Text="Sélection des plats" />
                        <Button
                            Grid.Column="1"
                            Padding="5,2"
                            Background="#4FC3F7"
                            Content="+ Ajouter un plat"
                            Foreground="White" />
                    </Grid>

                    <!--  Liste horizontale des plats  -->
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding Plats}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Margin="0,10,0,0" Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Width="220"
                                        Height="120"
                                        Margin="0,0,10,0"
                                        Background="White"
                                        BorderBrush="#CCCCCC"
                                        BorderThickness="1"
                                        CornerRadius="4">
                                        <StackPanel Margin="10">
                                            <TextBlock FontWeight="Bold" Text="{Binding Title}" />
                                            <TextBlock
                                                Margin="0,5,0,0"
                                                FontSize="12"
                                                Foreground="#666666"
                                                Text="{Binding Subtitle}" />
                                            <TextBlock
                                                Margin="0,20,0,0"
                                                HorizontalAlignment="Right"
                                                Foreground="#4CAF50"
                                                Text="{Binding Price}" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </StackPanel>

        <!--  Colonne de droite (30%) - Récapitulatif  -->
        <Border
            Grid.Column="1"
            Padding="15"
            Background="#FAFAFA"
            BorderBrush="#CCCCCC"
            BorderThickness="1"
            CornerRadius="4">
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,15"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Récapitulatif de commande" />

                <!--  Liste des articles  -->
                <StackPanel Margin="0,0,0,15">
                    <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                        <TextBlock Width="120" Text="Salade César × 2" />
                        <TextBlock HorizontalAlignment="Right" Text="— 17,00 €" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Width="120" Text="Poulet rôti × 3" />
                        <TextBlock HorizontalAlignment="Right" Text="— 38,70 €" />
                    </StackPanel>
                </StackPanel>

                <Separator Margin="0,0,0,15" />

                <!--  Total  -->
                <TextBlock
                    Margin="0,0,0,20"
                    HorizontalAlignment="Right"
                    FontWeight="Bold"
                    Text="Total : 55,70 €" />

                <!--  Boutons  -->
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button
                        Margin="0,0,10,0"
                        Padding="15,5"
                        Background="#E0E0E0"
                        Content="Annuler" />
                    <Button
                        Padding="15,5"
                        Background="#4CAF50"
                        Content="Valider"
                        Foreground="White" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
