<UserControl
    x:Class="S201.CreerCommande"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:S201"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,0,20,0">
            <Border
                Margin="0,0,0,20"
                Padding="10"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                CornerRadius="4">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Sélection du client" />

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8*" />
                        </Grid.ColumnDefinitions>

                        <TextBox
                            x:Name="ajoutClient"
                            Grid.Column="0"
                            Margin="0,0,5,0"
                            Padding="5"
                            VerticalContentAlignment="Center"
                            TextChanged="ajoutClient_TextChanged" />
                    </Grid>

                    <!--  Cadre client sélectionné  -->
                    <Border
                        Padding="10"
                        Background="#F5F5F5"
                        BorderBrush="#CCCCCC"
                        BorderThickness="1">
                        <ListBox
                            x:Name="listeClient"
                            Background="Transparent"
                            BorderThickness="0"
                            ItemsSource="{Binding LesClients}"
                            SelectionChanged="listeClient_SelectionChanged"
                            MouseDoubleClick="listeClient_MouseDoubleClick">
                            
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Tag="{Binding}">
                                        <TextBlock FontWeight="SemiBold" Text="{Binding Nomclient}" />
                                        <TextBlock Text="{Binding Tel}" />
                                        <TextBlock Text="{Binding Adresserue}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                    </Border>

                </StackPanel>
            </Border>

            <!--  Bloc Sélection des plats  -->
            <Border
                Padding="10"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                CornerRadius="4">
                <StackPanel>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            FontSize="16"
                            FontWeight="Bold"
                            Text="Sélection des plats" />
                        <Button
                            Grid.Column="1"
                            Padding="5,2"
                            Background="#4FC3F7"
                            Click="Button_Click"
                            Content="+ Ajouter un plat"
                            Foreground="White" />
                    </Grid>

                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding PlatsDeCommande}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Margin="0,10,0,0" Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Width="220"
                                        Height="120"
                                        Margin="0,0,10,0"
                                        Background="White"
                                        BorderBrush="#CCCCCC"
                                        BorderThickness="1"
                                        CornerRadius="4">
                                        <StackPanel Margin="10">
                                            <TextBlock FontWeight="Bold" Text="{Binding NomPlat}" />
                                            <TextBlock
                                                Margin="0,5,0,0"
                                                FontSize="12"
                                                Foreground="#666666"
                                                Text="{Binding DelaiPréparation}" />
                                            <TextBlock
                                                Margin="0,20,0,0"
                                                HorizontalAlignment="Right"
                                                Foreground="#4CAF50"
                                                Text="{Binding PrixUnitaire}" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </StackPanel>
        <Border
            Grid.Column="1"
            Padding="15"
            Background="#FAFAFA"
            BorderBrush="#CCCCCC"
            BorderThickness="1"
            CornerRadius="4">
            <StackPanel>
                <Separator Margin="0,0,0,15" />
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,0,20"
                        HorizontalAlignment="Left"
                        FontWeight="Bold"
                        Text="Total :" />
                    <TextBlock
                        x:Name="prixTotal"
                        Margin="10,0,0,0"
                        Text="{Binding PrixTotal, StringFormat={}{0:F2} €}"
                        TextWrapping="Wrap" />
                </StackPanel>


                <!--  Boutons  -->
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button
                        Margin="0,0,10,0"
                        Padding="15,5"
                        Background="#E0E0E0"
                        Content="Annuler" />
                    <Button
                        Padding="15,5"
                        Background="#4CAF50"
                        Content="Valider"
                        Foreground="White" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
