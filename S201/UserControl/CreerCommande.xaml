<UserControl
    x:Class="S201.CreerCommande"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:S201"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <StackPanel>
            <TextBlock
                x:Name="typeCommande"
                Margin="0,0,0,10"
                FontSize="16"
                FontWeight="Bold"
                Text="" />
        </StackPanel>

        <StackPanel Grid.Column="0" Margin="0,0,20,0">
            <Border
                Margin="0,44,0,20"
                Padding="10"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                CornerRadius="4">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Sélection du client" />

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8*" />
                        </Grid.ColumnDefinitions>

                        <TextBox
                            x:Name="ajoutClient"
                            Grid.Column="0"
                            Margin="0,0,5,0"
                            Padding="5"
                            VerticalContentAlignment="Center"
                            TextChanged="ajoutClient_TextChanged" />
                    </Grid>

                    <!--  Cadre client sélectionné  -->
                    <Border
                        Padding="10"
                        Background="#F5F5F5"
                        BorderBrush="#CCCCCC"
                        BorderThickness="1">
                        <ListBox
                            x:Name="listeClient"
                            Background="Transparent"
                            BorderThickness="0"
                            ItemsSource="{Binding LesClients}"
                            MouseDoubleClick="listeClient_MouseDoubleClick"
                            SelectionChanged="listeClient_SelectionChanged">

                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Tag="{Binding}">
                                        <TextBlock FontWeight="SemiBold" Text="{Binding Nomclient}" />
                                        <TextBlock Text="{Binding Tel}" />
                                        <TextBlock Text="{Binding Adresserue}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                    </Border>

                </StackPanel>
            </Border>

            <!--  Bloc Sélection des plats  -->
            <Border
                Padding="10"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                CornerRadius="4">
                <StackPanel>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            FontSize="16"
                            FontWeight="Bold"
                            Text="Sélection des plats" />
                        <Button x:Name="butAjoutPlat"
                            Grid.Column="1"
                            Padding="5,2"
                            Background="#4FC3F7"
                            Click="butAjoutPlat_Click"
                            Content="+ Ajouter un plat"
                            Foreground="White" />
                    </Grid>
                    <DataGrid
                            Height="200"
                            AutoGenerateColumns="False"
                            IsReadOnly="True"
                            ItemsSource="{Binding PlatsDeCommande}">
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Numplat}"
                                    Header="Plat" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Quantite}"
                                    Header="Quantité" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Prix, StringFormat={}{0:F2}}"
                                    Header="Prix (€)" />
                            </DataGrid.Columns>
                        </DataGrid>
                </StackPanel>
            </Border>
        </StackPanel>
        <Border
            Grid.Column="1"
            Padding="15"
            Background="#FAFAFA"
            BorderBrush="#CCCCCC"
            BorderThickness="1"
            CornerRadius="4">
            <StackPanel>
                <Separator Margin="0,0,0,15" />
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,0,20"
                        HorizontalAlignment="Left"
                        FontWeight="Bold"
                        Text="Total :" />
                    <TextBlock
                        x:Name="prixTotal"
                        Margin="10,0,0,0"
                        Text=""
                        TextWrapping="Wrap" />
                </StackPanel>


                <!--  Boutons  -->
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button x:Name="butAnnulerCommande"
                        Margin="0,0,10,0"
                        Padding="15,5"
                        Background="#E0E0E0"
                        Content="Annuler" Click="butAnnulerCommande_Click" />
                    <Button x:Name="butValider"
                        Padding="15,5"
                        Background="#4CAF50"
                        Content="Valider"
                        Foreground="White" Click="butValider_Click" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
