<UserControl
    x:Class="S201.GestionClients"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:S201"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="1200"
    mc:Ignorable="d">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="50" />
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>

        <!--  Header avec titre et info utilisateur  -->
        <Grid Grid.Row="0" Background="#4A90E2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Label
                Grid.Column="0"
                Margin="20,0,0,0"
                VerticalAlignment="Center"
                Content="SIBILIA - GESTION DES CLIENTS"
                FontSize="16"
                FontWeight="Bold"
                Foreground="White" />

            <Label
                Grid.Column="1"
                Margin="0,0,20,0"
                VerticalAlignment="Center"
                Content="Connecté en tant que: Pierre Martin (Gestionnaire)"
                FontSize="12"
                Foreground="White" />
        </Grid>

        <!--  Navigation tabs  -->
        <Grid Grid.Row="1" Background="#E8E8E8">
            <StackPanel Margin="10,0,0,0" Orientation="Horizontal">
                <Button
                    Padding="15,10"
                    Background="Transparent"
                    BorderThickness="0"
                    Content="Commandes"
                    FontSize="12" />
                <Button
                    Padding="15,10"
                    Background="White"
                    BorderBrush="#4A90E2"
                    BorderThickness="0,0,0,2"
                    Content="Clients"
                    FontSize="12"
                    FontWeight="Bold" />
                <Button
                    Padding="15,10"
                    Background="Transparent"
                    BorderThickness="0"
                    Content="Accueil"
                    FontSize="12" />
            </StackPanel>
        </Grid>

        <!--  Section titre et actions  -->
        <Grid Grid.Row="2" Margin="20,10,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Label
                Grid.Column="0"
                VerticalAlignment="Center"
                Content="Gestion des clients"
                FontSize="20"
                FontWeight="Bold" />

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <TextBox
                    x:Name="txtRecherche"
                    Width="250"
                    Height="30"
                    Margin="0,0,10,0"
                    Padding="8,5"
                    VerticalContentAlignment="Center"
                    Foreground="Gray"
                    Text="Rechercher un client..." />
                <Button
                    Margin="0,0,10,0"
                    Padding="15,5"
                    Background="#4A90E2"
                    BorderThickness="0"
                    Content="Rechercher"
                    Foreground="White" />
                <Button
                    Padding="15,5"
                    Background="#28A745"
                    BorderThickness="0"
                    Content="+ Ajouter un client"
                    Foreground="White" />
            </StackPanel>
        </Grid>

        <!--  DataGrid des clients  -->
        <Border
            Grid.Row="3"
            Margin="20,0,20,0"
            BorderBrush="#E0E0E0"
            BorderThickness="1">
            <DataGrid
                x:Name="dgClients"
                AlternatingRowBackground="#F8F9FA"
                AutoGenerateColumns="False"
                Background="White"
                GridLinesVisibility="Horizontal"
                HeadersVisibility="Column"
                RowHeaderWidth="0">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="80"
                        Binding="{Binding Id}"
                        Header="ID" />
                    <DataGridTextColumn
                        Width="200"
                        Binding="{Binding Nom}"
                        Header="Nom" />
                    <DataGridTextColumn
                        Width="120"
                        Binding="{Binding Telephone}"
                        Header="Téléphone" />
                    <DataGridTextColumn
                        Width="250"
                        Binding="{Binding Email}"
                        Header="Email" />
                    <DataGridTextColumn
                        Width="120"
                        Binding="{Binding Type}"
                        Header="Type" />
                    <DataGridTemplateColumn Width="80" Header="Statut">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border
                                    Padding="8,2"
                                    Background="#D4EDDA"
                                    CornerRadius="3">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="11"
                                        FontWeight="SemiBold"
                                        Foreground="#155724"
                                        Text="Actif" />
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="200" Header="Actions">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                    <Button
                                        Margin="0,0,10,0"
                                        Padding="8,2"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Content="Modifier"
                                        FontSize="12"
                                        Foreground="#007BFF" />
                                    <Button
                                        Padding="8,2"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Content="Commandes"
                                        FontSize="12"
                                        Foreground="#007BFF" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>

                <!--  Les données seront liées depuis le code-behind  -->
            </DataGrid>
        </Border>

        <!--  Footer  -->
        <Grid Grid.Row="4" Background="#F8F9FA">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Label
                Grid.Column="0"
                Margin="20,0,0,0"
                VerticalAlignment="Center"
                Content="128 clients trouvés"
                FontSize="11"
                Foreground="Gray" />

            <Label
                Grid.Column="1"
                Margin="0,0,20,0"
                VerticalAlignment="Center"
                Content="Version 1.0.1 | © 2023 SIBLIA"
                FontSize="11"
                Foreground="Gray" />
        </Grid>
    </Grid>
</UserControl>