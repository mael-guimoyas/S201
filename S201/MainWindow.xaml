<Window
    x:Class="S201.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:S201"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <!--  1. Barre supérieure (Header)  -->
        <Border
            Grid.Row="0"
            Padding="5"
            Background="#2196F3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />

                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    FontSize="10"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="SIBILLA - TABLEAU DE BORD VENDEUR" />

                <TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Foreground="White"
                    Text="Connecté en tant que: Jean Dupont (Vendeur)" />
            </Grid>
        </Border>

        <Grid Grid.Row="1" Height="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110" />
                <ColumnDefinition Width="110" />
                <ColumnDefinition Width="110" />
            </Grid.ColumnDefinitions>

            <Button
                x:Name="ButAccueil"
                Grid.Column="0"
                Padding="15,5"
                Background="#1976D2"
                BorderThickness="0"
                Click="ButAccueil_Click"
                Content="Accueil"
                FontSize="14"
                Foreground="White" />

            <Button
                x:Name="ButComm"
                Grid.Column="1"
                Padding="15,5"
                Background="White"
                BorderThickness="0"
                Click="ButComm_Click"
                Content="Commandes"
                FontSize="14"
                Foreground="Black" />

            <Button
                x:Name="ButClients"
                Grid.Column="2"
                Padding="15,5"
                Background="White"
                BorderThickness="0"
                Click="ButClients_Click"
                Content="Clients"
                FontSize="14"
                Foreground="Black" />
        </Grid>

        <ContentControl x:Name="Conteneur" Grid.Row="2" />

        <Border
            Grid.Row="3"
            Padding="10"
            Background="#F5F5F5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Text="Sibilla" />
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        Text="Version 1.0.0" />
                    <TextBlock VerticalAlignment="Center" Text="© 2025 Sibilla" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
